{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "Steveplays28"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/${mod_id}",
    "sources": "${git_repository_host}/${git_organization}/${mod_id}",
    "issues": "${git_repository_host}/${git_organization}/${mod_id}/issues"
  },
  "license": "${mod_license}",
  "icon": "assets/${mod_id}/icon.png",
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/KbWxgGg"
      }
    },
    "mc-publish": {
      "loaders": [
        "fabric",
        "quilt"
      ],
      "curseforge": "${curseforge_project_id}",
      "modrinth": "${modrinth_project_id}"
    }
  },
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.steveplays.playeranimationrework.fabric.PlayerAnimationReworkFabric"
    ],
    "client": [
      "com.steveplays.playeranimationrework.fabric.PlayerAnimationReworkClientFabric"
    ]
  },
  "mixins": [
    "${mod_id}-common.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "minecraft": "${supported_minecraft_version}",
    "fabric": ">=${fabric_api_version}",
    "architectury": ">=${architectury_api_version}"
  }
}
